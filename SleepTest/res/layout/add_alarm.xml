<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- 闹铃开关
时间
重复
铃声选择
震动开启
备注信息  -->
<TableRow  android:id="@+id/alarm_off_on_row"    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="闹铃开关"/>
<ToggleButton
        android:id="@+id/alarm_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton" />
</TableRow>
<TableRow   android:id="@+id/alarm_time_row"  android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间" />
    <TextView
        android:id="@+id/alarm_time_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6:00" />
    <TextView
        android:id="@+id/alarm_time_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</TableRow>
<TableRow   android:id="@+id/alarm_time_row"  android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <Button  android:id="@+id/alarm_add_ok" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成" />
   <Button  android:id="@+id/alarm_add_cancel" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消" />
</TableRow>


</TableLayout>